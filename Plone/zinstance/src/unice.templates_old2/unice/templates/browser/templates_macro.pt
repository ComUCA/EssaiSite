<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

    <body>

<metal:content-core fill-slot="content-core">

<!-- ################################################################################################## -->
<!-- ### CHAPEAU ###################################################################################### -->
<!-- ################################################################################################## -->

<metal:block define-macro="entete">

    <tal:block condition="python:view.access()['access']">
        <div tal:condition="python:context.relative_url_matches(['/faculte-des-lettres-arts-sciences-humaines'])"
            tal:define="templates python:['template1_view', 'template1bis_view', 'template2_view', 'template2bis_view', 'template2ter_view', 'template3_view', 'template4_view', 'template5_view', 'template6_view', 'template6bis_view', 'template6ter_view', 'template7_view', 'template8_view', 'templateAffiche_view', 'listingsimple_view', 'listingpanel_view', 'listingonglets_view', 'listingboutons_view', 'listingboutons2niveaux_view']"
            class="dropdown pull-right bouton_modification_template">

            <a data-toggle="dropdown" class="btn btn-warning btn-xs" href="#">
                <i class="fa fa-th fa-lg"></i> Changer de template<b class="caret"></b>
            </a>

            <ul class="dropdown-menu">
                <li tal:repeat="t templates" class="text-left">
                    <a tal:attributes="href string:${context/absolute_url}/selectViewTemplate?templateId=${t}" tal:content="python:t[:-5]"/>
                </li>
            </ul>
        </div>
    </tal:block>

    <tal:options tal:condition="document">
        <tal:block tal:define="item document;
            opt_title TRUE; opt_desc TRUE; opt_desctrunc FALSE; opt_image not:item/image_default; opt_imageratio string:ratio4:3;
            opt_title python:(not context.Title().strip().lower() == item['title'].strip().lower());">

            <ul tal:attributes="class python:'row canal_fil_importance3 %s' % ('entete_complete' if item['text'] and item['entete_complete'] else 'entete_simple')">
                <li class="col-md-12">

                    <div tal:condition="python:view.access()['access']" class="text-right visualClear">
                        <a class="btn btn-warning btn-xs" tal:attributes="href string:./masquer_entete?came_from=${context/absolute_url}&subject=#ExclureContenuTemplate">
                            <i class="fa fa-eye-slash"></i> Masquer l'en-tête
                        </a>
                    </div>

                    <tal:block condition="python:item['text'] and not item['entete_complete']" define="opt_modal TRUE">
                        <tal:block condition="opt_image">
                            <metal:block use-macro="context/templates_macro/macros/thumb_link"></metal:block>
                        </tal:block>
                        <metal:block use-macro="context/templates_macro/macros/titledesc_link"></metal:block>
                        <br/>
                        <metal:block use-macro="context/templates_macro/macros/more_link"></metal:block>
                    </tal:block>

                    <tal:block condition="python:(not item['text']) or (item['text'] and item['entete_complete'])">
                        <tal:block condition="opt_image">
                            <metal:block use-macro="context/templates_macro/macros/thumb_no_link"></metal:block>
                        </tal:block>
                        <metal:block use-macro="context/templates_macro/macros/titledesc_no_link"></metal:block>
                    </tal:block>

                </li>
            </ul>

            <tal:block condition="python:item['text'] and not item['entete_complete']">
                <metal:block use-macro="context/templates_macro/macros/item_modal"></metal:block>
            </tal:block>

            <tal:block condition="python: item['text'] and item['entete_complete']">
                <tal:block condition="item/entete_complete">
                    <br/><div class="visualClear"></div>
                    <tal:block content="structure item/text"/>
                </tal:block>
            </tal:block>

            <tal:block define="opt_entete TRUE">
                <metal:block use-macro="context/templates_macro/macros/edit"></metal:block>
            </tal:block>

        </tal:block>

    </tal:options>

    <div tal:condition="python:view.access()['access'] and not document"
        tal:define="document2 python:view.document('page2.html');" class="text-right visualClear">

        <a tal:condition="not:document2" tal:attributes="href string:./auto_entete_script?came_from=${context/absolute_url}"
            class="btn btn-warning btn-xs">
            <i class="fa fa-plus"></i> Créer une en-tête
        </a>
        <a tal:condition="document2" tal:attributes="href string:./afficher_entete?came_from=${context/absolute_url}"
            class="btn btn-warning btn-xs">
            <i class="fa fa-eye"></i> Afficher l'en-tête
        </a>
    </div>

</metal:block>

