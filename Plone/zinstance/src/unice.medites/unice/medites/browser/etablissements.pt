        <script>

          var googleScript1 = $(".scriptGoogleMapPhase1").html();
          googleScript1 = googleScript1.replace(/([A-Za-z])'([A-Za-z0-9])/g, "$1\\'$2");
          var locations1 = eval(googleScript1.replace(/\s+/g,' '));

          var googleScript2 = $(".scriptGoogleMapPhase2").html();
          googleScript2 = googleScript2.replace(/([A-Za-z])'([A-Za-z0-9])/g, "$1\\'$2");
          var locations2 = eval(googleScript2.replace(/\s+/g,' '));

          var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 11,
            scrollwheel: false,
            center: new google.maps.LatLng(43.6882405,7.207712),
            mapTypeId: google.maps.MapTypeId.ROADMAP
          });
          var styles = [
            {
              stylers: [ ]},{
              featureType: "water",
              elementType: "geometry",
              stylers: [
                { hue: "#139bd5" },
                { lightness: -50 },
                { visibility: "simplified" }
              ]
            },
            {
              featureType: "landscape",
              elementType: "geometry",
              stylers: [
                { hue: "#4eaa33" },
                { lightness: -10 },
                { saturation: 40 },
                { visibility: "simplified" }
              ]
            },
            {
              featureType: "road",
              elementType: "geometry",
              stylers: [
                { hue: "#ccc" },
                { lightness: 50 },
                { visibility: "simplified" }
              ]
            },
            {
              featureType: "road",
              elementType: "labels",
              stylers: [
                { visibility: "off" }
              ]
            }
          ];
          map.controls[google.maps.ControlPosition.RIGHT_BOTTOM].push(document.getElementById('legend'));
          map.setOptions({styles: styles});
          var infowindow = new google.maps.InfoWindow();
          
          var marker1, i;
          for (i = 0; i < locations1.length; i++) {
            marker1 = new google.maps.Marker({
            position: new google.maps.LatLng(locations1[i][1], locations1[i][2]),
            map: map,
            icon: locations1[i][3]
          });
            google.maps.event.addListener(marker1, 'click', (function(marker1, i) {
              return function() {
                infowindow.setContent(locations1[i][0]);
                infowindow.open(map, marker1);
              }
            })(marker1, i));
          }
          var marker2, i;
          for (i = 0; i < locations2.length; i++) {
            marker2 = new google.maps.Marker({
            position: new google.maps.LatLng(locations2[i][1], locations2[i][2]),
            map: map,
            icon: locations2[i][3]
          });
            google.maps.event.addListener(marker2, 'click', (function(marker2, i) {
              return function() {
                infowindow.setContent(locations2[i][0]);
                infowindow.open(map, marker2);
              }
            })(marker2, i));
          }
        </script>
