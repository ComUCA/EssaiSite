<html tal:omit-tag=""
    xmlns="http://www.w3.org/1.09/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="unice.portlet.sygefor">

    <dl tal:attributes="id view/data/extra_id; class string:portlet portletSygefor ${view/data/extra_css};">

        <dt tal:condition="not:view/data/omit_header" class="portletHeader">
            <span tal:content="view/header"/>
        </dt>

        <dd class="portletItem loading" tal:condition="view/data/sygefor"
            tal:attributes="data-sygefor view/data/sygefor; data-inscription view/data/inscription">
            <p class="text-center text-muted">Chargement de l'offre de formation en cours...</p>
        </dd>

    </dl>

</html>

