<!-- Utilisateur connecté => affichage standard plone (macro "master") -->
<tal:block condition="python:not (context.restrictedTraverse('@@plone_portal_state').anonymous() or 'Partenaires' in user.getGroups())">
    <metal:block metal:use-macro="context/main_template/macros/master"/>
</tal:block>

<!-- Utilisateur anonyme => affichage medites bootstap (macro "medites_html") -->
<tal:block condition="python:context.restrictedTraverse('@@plone_portal_state').anonymous() or 'Partenaires' in user.getGroups()"
    define="infos view/infos;
                    scales context/@@images;">
  <metal:block use-macro="context/medites_macros/macros/master">
    <div metal:fill-slot="body">
<!-- la ligne du dessous permet aux fields dexterity d etre interpretes -->
			<metal:content-core define-macro="content-core"
                          tal:define="widgets nocall:context/@@view">
        <section class="row dark emplacement-normal row-same-height">
<!-- contenu --> 
          <div class="col-xs-6 col-sm-6 col-md-4 col-md-height col-xs-height col-sm-height col-full-height">
            <div class="content presentation "> 
              <ol class="breadcrumb">
                <li><a href="../accueil">Accueil</a></li>
                <li >Actualité</li>
                <li tal:content="context/title" tal:attributes="class string:active" />
              </ol>
              <h1 tal:content="context/title" tal:condition="context/title" />
              <div tal:content="context/contenu" tal:condition="context/contenu" />
            </div>
          </div>
          <div class="col-xs-6  col-sm-6 col-md-8 col-md-height col-sm-height col-full-height">
 <!--            <img tal:define="scales_image context/@@images; maVariable python:scales_image.scale('image', scale='extra-large')"
                 tal:attributes="src maVariable/url; class string:img-all; alt string:Photo de ${context/title}"
                 tal:condition="context/image" /> -->


            <img tal:define="scales_image context/@@images; maVariable python:scales_image.scale('image', scale='large')"
                 tal:attributes="src maVariable/url; class string:img-all; alt string:Photo de ${context/title}"
                 tal:condition="context/image" />

          </div>
        </section>       
        <metal:block use-macro="context/medites_macros/macros/footerNavbar" />
    	</metal:content-core>
    </div>
  </metal:block>
</tal:block>