<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    i18n_domain="unice.medites">

  	<include package="plone.app.contentmenu" />


    <!-- PAGE TEMPLATES -->
    <browser:page
        name="medites_folder"
        for="*"
        permission="zope2.View"
        class=".medites.Medites"
        template="medites_folder.pt"/>

    <browser:page
        name="accueil"
        for="*"
