    <browser:page
        name="formulaire"
        for="*"
        permission="zope2.View"
        class=".medites.Medites"
        template="formulaire.pt"/>    

    <browser:page
        name="actualites"
        for="*"
        permission="zope2.View"
        class=".medites.Medites"
