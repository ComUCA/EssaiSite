    <browser:page
        name="annuaire"
        for="*"
        permission="zope2.View"
        class=".medites.Medites"
        template="medites_annuaire.pt"/>


    <!-- MACROS -->
    <browser:page
        name="medites_macros"
        for="*"
        permission="zope2.View"
        template="medites_macros.pt"/>

    <browser:page
        name="medites_macros_parcours"
        for="*"
        permission="zope2.View"
        template="medites_macros_parcours.pt"/>

    <!-- CSS, JS & IMG -->
    <browser:resourceDirectory
        name="unice.medites.stylesheets"
        directory="stylesheets"/>

    <browser:resourceDirectory
        name="unice.medites.javascripts"
        directory="javascripts"/>

    <browser:resourceDirectory
        name="unice.medites.images"
        directory="images"/>


</configure>
